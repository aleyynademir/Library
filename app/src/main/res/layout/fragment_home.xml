<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:text="Hoş Geldiniz"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okuduğun Kitap Sayısı"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="178dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okumayı Hedeflediğin\n Kitap Sayısı"
        app:layout_constraintBaseline_toBaselineOf="@id/textView11"
        tools:layout_editor_absoluteX="202dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okumya Devam ettiğin\n Kitap Sayısı"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="354dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Günlük Okunacak Sayfa\n Sayısı"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="354dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="171dp"
        android:layout_height="44dp"

        android:ems="10"
        android:inputType="number"
        android:text="14"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="495dp" />

    <EditText
        android:id="@+id/editTextNumber4"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="22"

        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="223dp" />

    <EditText
        android:id="@+id/editTextNumber5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="24"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="402dp" />

    <EditText
        android:id="@+id/editTextNumber6"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="35"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="494dp" />

</androidx.constraintlayout.widget.ConstraintLayout>